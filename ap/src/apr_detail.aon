          read record (apm01_dev,key=apm01_key$) apm01a$
          if endvendor$<>"" if apm01a.vendor_id$>endvendor$ break
          call pgmdir$+"adc_progress.aon","S","","","","",0,0,1,meter_num,status 

          rem --- Print vendor master information
 
          gosub report_heading
          print (printer_dev) @(4),"Address: ",apm01a.addr_line_1$,@(45),"Account ID: ",apm01a.vendor_acct$
          print (printer_dev) @(15),apm01a.addr_line_2$,@(43),"Alt Sequence: ",apm01a.alt_sequence$
          print (printer_dev) @(7),"City: ",apm01a.city$,@(42),"Hold Invoices? ",apm01a.hold_flag$
          print (printer_dev) @(6),"State: ",apm01a.state_code$,@(17),"Zip/Postal: ",fnzipcode$(apm01a.zip_code$),
