                print (printer_dev) @(4),"Next Year: ",apm02a.nyr_purch:m1$,@(30),apm02a.nyr_disc:m1$,
:                                   @(45),apm02a.nyr_payments:m1$,@(60),apm02a.nxt_cyr_pmts:m1$
                lines=lines+8
          
                rem --- Print invoices

                balance=0
                x$=""
                if retention$="Y" x$="Retention"
                if lines+4>maxlines gosub report_heading
                gosub invoice_heading
                vendor$=apm02a.firm_id$+apm02a.ap_type$+apm02a.vendor_id$
                read (apt01_dev,key=vendor$,dom=*next)

                rem --- Read next invoice header record

                while moreheaders
