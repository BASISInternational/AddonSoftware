    seterr std_error
    setesc std_error

rem --- Retrieve the program path

    pgmdir$=stbl("+DIR_PGM",err=*next)

rem --- Retrieve sysinfo data

    sysinfo_template$=stbl("+SYSINFO_TPL",err=*next)
    dim sysinfo$:sysinfo_template$
    sysinfo$=stbl("+SYSINFO",err=*next)
    milestone=num(stbl("+MILESTONE",err=*next),err=*next)
    firm_id$=sysinfo.firm_id$

rem --- Initializations

    rem precision p[1]
    precision num(ivs01a.precision$)
    headings=9
    when$=sysinfo.system_date$
    clock$=""
    h9$=""
    dim headings$[headings],o[10],l[4]
    if item_type$="" x0$="All" else x0$=item_type$
    headings$[0]=sysinfo.firm_name$
    headings$[1]=sysinfo.task_desc$+" For Item Type "+x0$
    width=132
    page=0
    l9=59
    l=l9+1
    dim files[4],params[6],masks$[3]
    files[0]=ivm01_dev
    files[1]=ivm10_dev
    files[2]=arm01_dev
    files[3]=apm01_dev
    files[4]=glm01_dev
    params[0]=p[0]
    params[2]=vendlen
    params[3]=num(g2$(7,2))
    params[4]=p[5]
    params[5]=p[6]
    params[6]=p[7]
    masks$[0]=firm_id$
    masks$[2]=vendmask$
    masks$[3]=g5$
    more=1

rem --- Print positions

    gosub Position
   
rem --- Position files

    call pgmdir$+"adc_printer.aon",printer_dev,1,"","",status
    if status goto std_exit
    call pgmdir$+"adc_progress.aon","N","","","","",0,ivt03_dev,1,meter_num,status

    dim ivt03a_key$:ivt03_key_tpl$
    read (ivt03_dev,key=firm_id$+beg_vendor$,dom=*next)

 rem --- Get next record

    while more
        ivt03a_key$=key(ivt03_dev,end=*break)
        if pos(firm_id$= ivt03a_key$)<>1 break
        vendor$= ivt03a_key.vendor_id$
        product$=ivt03a_key.product_type$
        tran_date$=ivt03a_key.trans_date$
        whse$=ivt03a_key.wharehouse_id$
        item$=ivt03a_key.item_id$
        read (ivt03_dev)

rem --- Valid Vendor/Product/Date/Warehouse/Item?

        if end_vendor$<>"" if vendor$>end_vendor$  break
        if beg_prod$<>"" if product$<beg_prod$ read (ivt03_dev,key=ivt03a_key.firm_id$+ivt03a_key.vendor_id$+beg_prod$,dom=*continue)
        if end_prod$<>"" if product$>end_prod$ read (ivt03_dev,key=ivt03a_key.firm_id$+ivt03a_key.vendor_id$+$FF$,dom=*continue)
        if beg_date$<>"" if tran_date$<beg_date$ read (ivt03_dev,key=ivt03a_key.firm_id$+ivt03a_key.vendor_id$+
:       ivt03a_key.lotser_no$+beg_date$,dom=*continue)
        if end_date$<>"" if tran_date$>end_date$ read (ivt03_dev,key=ivt03a_key.firm_id$+ivt03a_key.vendor_id$+
:       ivt03a_key.lotser_no$+$FF$,dom=*continue)
        if beg_whse$<>"" if whse$<beg_whse$ read (ivt03_dev,key=ivt03a_key.firm_id$+ivt03a_key.vendor_id$+
:       ivt03a_key.lotser_no$+ivt03a_key.trans_date$+beg_whse$,dom=*continue)
        if end_whse$<>"" if whse$>end_whse$ read (ivt03_dev,key=ivt03a_key.firm_id$+ivt03a_key.vendor_id$+
:       ivt03a_key.lotser_no$+ivt02a_key.trans_date$+$FF$,dom=*continue)
        if beg_item$<>"" if item$<beg_item$ read (ivt03_dev,key=ivt03a_key.firm_id$+ivt03a_key.vendor_id$+
:       ivt03a_key.lotser_no$+ivt02a_key.trans_date$+ivt03a_key.warehouse_id$+beg_item$,dom=*continue)
        if end_item$<>"" if item$>end_item$ read (ivt03_dev,key=ivt03a_key.firm_id$+ivt03a_key.vendor_id$+
:       ivt03a_key.lotser_no$+ivt02a_key.trans_date$+ivt03a_key.warehouse_id$+$FF$,dom=*continue)

rem --- Open or Closed Lots?

        if ocb$<>"B" then
            d0=0
            find record (ivm07_dev,key=firm_id$+ivt03a_key.wharehouse_id$+ivt03a_key.item_id$+ivt03a_key.lotser_nbr$,dom=*next) ivm07a$
            if (ocb$="O" and d0=0) or (ocb$="C" and d0)then
                continue
            endif
        endif

        read record (ivt01_dev,key=ivt03a_key.firm_id$+ivt03a_key.warehouse_id$+
:       ivt03a_key.item_id$+ivt03a_key.lotser_no$+ivt03a_key.trans_date$+ivt03a_key.iv_hist_seq$,dom=*continue) ivt01a$
        find record (ivm01_dev,key=firm_id$+item$,dom=*continue) ivm01a$
        if item_type$<>"" if  ivm01a.item_type$<>item_type$ then
            continue
        endif
        if beg_date$<>"" if ivt01a_key.trans_date$<beg_date$ read (ivt01_dev,key=ivt01a_key.firm_id$+ivt01a_key.warehouse_id$+
:       ivt01a_key.item_id$+ivt01a_key.lotser_no$+beg_date$,dom=*continue)
        if end_date$<>"" if ivt01a_key.trans_date$>end_date$ read (ivt01_dev,key=ivt01a_key.firm_id$+ivt01a_key.warehouse_id$+
:       ivt01a_key.item_id$+ivt01a_key.lotser_no$+beg_date$+$FF$,dom=*continue)

rem --- Level breaks?

        call pgmdir$+"adc_progress.aon","S","","","",ivt03a.vendor_nbr$+" "+ivt03a.item_number$+" "+ivt03a.lotser_nbr$,0,0,1,meter_num,status
        if vendor$<>t1$ gosub Vendor_Break
        if ivt02a_key.product_type$+ivt02a_key.lotser_no$<>t2$ first$="Y" else first$="N",t2$=ivt02a_key.product_type$+ivt02a_key.lotser_no$

rem --- Get Reference Block

        dim desc$[2]
        ivt01a_a1$=ivt01a.TRANS_SOURCE$+ivt01a.TRANS_REF_1$+ivt01a.TRANS_REF_2$+ivt01a.TRANS_REF_3$+ivt01a.TRANS_REF_4$+ivt01a.TRANS_SEQ$+ivt01a.LINE_CODE$+
:       ivt01a.UNIT_MEASURE$+ivt01a.TRANS_CMT$+ivt01a.FINISH_ITEM$+ivt01a.GL_ACCOUNT+ivt01a.LOCATION$+
:       ivt01a.PO_LINE_CODE$+ivt01a.RESERVED_STR$
        call pgmdir$+"ivc_td.bbx",a1$,files[all],params[all],masks$[all],type$,desc$[all]

rem --- Print detail line

        needed=1
        if first$="Y" needed=needed+1
        if l+needed>l9 gosub report_heading
        if first$="Y" print (printer_dev)@(o[1]),product$,@(o[2]),ivt03a_key.lotser_nbr$,@(o[5]),ivt03a_key.wharehouse_id$,@(o[6]),ivt03a_key.item_id$," ",fnitem$(ivm01a.item_desc$,p[5],p[6],p[7]); let l=l+1
        rem print (printer_dev)@(o[3]),fndate$(ivt03a.trans_date$),@(o[4]),type$,@(o[5]),desc$[1],@(o[7]),ivt01a.trans_qty:m2$,@(o[8]),ivt01a.unit_cost:m3$,@(o[9]),ivt01a.trans_qty*ivt01a.unit_cost:m1$,@(o[10])ivt01a.unit_price:m4$
        print (printer_dev)@(o[3]),fndate$(ivt03a_key.trans_date$),@(o[4]),type$,@(o[5]),desc$[1],@(o[7]),ivt01a.trans_qty:m2$,@(o[8]),ivt01a.unit_cost:m3$,@(o[9]),ivt01a.trans_qty*ivt01a.unit_cost:m1$,@(o[10]),ivt01a.unit_price:m4$
        l=l+1
        first$="N"

    wend

done: rem --- All done

    goto std_exit

report_heading: rem --- Report Heading

    l=headings+1
    call pgmdir$+"adc_rpthead.aon",printer_dev,headings$[all],headings,page,width,when$,clock$,status
    if status exitto std_exit
    return

Init_Heading: rem --- Initialize HEADINGS$

    dim h1$(width),h2$(width),h7$(width),h8$(width)
    x1$="First Date"
    x2$="Last Date"
    if ocb$="O" x0$="Open " else if ocb$="C" x0$="Closed " else x0$=""
    if beg_date$<>"" x1$=fndate$(beg_date$)
    if end_date$<>"" x2$=fndate$(end_date$)
    headings$[2]=x0$+"From "+x1$+" Through "+x2$
    x1$="First"
    x2$="First"
    x3$="First"
    x4$="First"
    x4=5
    if beg_item$<>"" x1$=beg_item$
    if beg_whse$<>"" x2$=beg_whse$
    if beg_vendor$<>"" x3$=fnmask$(beg_vendor$,vendmask$)
    if beg_prod$<>"" x4$=beg_prod$,x4=3
    if end_prod$="" if x4=3 x4=4
    h1$(1)="From Item: "+x1$
    h1$(46)="From Warehouse: "+x2$
    h1$(79)="From Vendor: "+x3$
    h1$(width-x4-13)="From Product: "+x4$
    x1$="Last"
    x2$="Last"
    x3$="Last"
    x4$="Last"
    x5$="All Item Types"
    if end_item$<>"" x1$=end_item$
    if end_whse$<>"" x2$=end_whse$
    if end_vendor$<>"" x3$=fnmask$(end_vendor$,vendmask$)
    if end_prod$<>"" x4$=end_prod$
    let h2$(1)="  To Item: "+x1$,h2$(46)="  To Warehouse: "+x2$,h2$(79)="  To Vendor: "+x3$,h2$(width-x4-13)="  To Product: "+x4$
    let h7$(o[1]+1)="Prod",h7$(22)="Transaction"
    let h8$(1)="Vendor",h8$(o[1]+1)="Type Serial # Date"
    let h8$(o[4]+1)="Type Whse Item/Reference Information",h8$(o[7]+m2-8)="Quantity"
    let h8$(o[8]+m3-9)="Unit Cost",h8$(o[9]+m1-9)="Extension",h8$(o[10]+m4-5)="Price"
    let headings$[4]=h1$,headings$[5]=h2$,headings$[7]=h7$,headings$[8]=h8$
    return

Vendor_Break: rem --- Vendor Break

    if l+1>l9 gosub report_heading
    rem dim c1$(30)
    let apm01a.vendor_name$="Invalid Vendor"
    find record (apm01_dev,key=firm_id$+vendor$,dom=*next) apm01a$
    print (printer_dev)@(0),fnmask$(ivt03_key.vendor_id$,vendmask$)," ",apm01a.vendor_name$
    let l=l+1
    let t1$=vendor$,first$="Y"
    return

Position: rem --- Print positions

    m1$=ivs01a.amount_mask$
    m2$=ivs01a.unit_mask$
    m3$=ivs01a.cost_mask$
    call pgmdir$+"adc_sizemask.aon",m1$,m1,8,15
    call pgmdir$+"adc_sizemask.aon",m2$,m2,8,12
    call pgmdir$+"adc_sizemask.aon",m3$,m3,8,12
    o[0]=0
    o[1]=o[0]+max(len(vendmask$)+1,7)
    o[2]=o[1]+5
    o[3]=o[2]+7
    o[4]=o[3]+9
    o[5]=o[4]+5
    o[6]=o[5]+5
    o[10]=width-m4
    o[9]=o[10]-m1
    o[8]=o[9]-m3
    o[7]=o[8]-m2
    gosub Init_Heading

return

