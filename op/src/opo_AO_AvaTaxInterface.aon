            if pos("com.basis.startup.type.BBjException: java.net.UnknownHostException:"=errText$) then
                pos1=pos("("=errText$,-1)+1
                pos2=pos(")"=errText$,-1)
                host$=errText$(pos1,pos2-pos1)
            
                msg_id$="GENERIC_WARN"
                dim msg_tokens$[1]
                msg_tokens$[1]="Your internet connection to "+host$+" failed. Check your internet connection."+$0A$+
:                   "Sorry, this means the sales tax service is not available at this time."
                call stbl("+DIR_SYP")+"bac_message.bbj",msg_id$,msg_tokens$[all],msg_opt$,rd_table_chans$[all]
            
                errorHandled=Boolean.valueOf("true")
            endif
            
            if !errorHandled and pos("com.basis.startup.type.BBjException: net.avalara.avatax.rest.client.AvaTaxClientException:"=errText$) then
                text$=$22$+"code"+$22$+":"+$22$
                errText$=errText$(pos(text$=errText$)+len(text$))
                code$=errText$(1,pos($22$+","=errText$)-1)
                
