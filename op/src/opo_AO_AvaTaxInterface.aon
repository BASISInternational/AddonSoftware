        rem /**
        rem  * Get current Exemption information for given customer, ship-to type and ship-to number, and
        rem  * update ARM_CUSTEXMPT information as needed.
        rem  * 
        rem  * @param BBjString customer_id$
        rem  * @param BBjString shipto_type$
        rem  * @param BBjString shipto_no$
        rem  * @param AddressLocationInfo addrTo!
        rem  *
        rem  * @return Properties Exemption properties
        rem  */
        method protected Properties updateCustomerExemption(BBjString customer_id$, BBjString shipto_type$, BBjString shipto_no$, AddressLocationInfo addrTo!)
            seterr updateCustomerExemption_error

            rem --- Get customer and location this exemption for
            companyId!=new Integer(#userCompanyID$)
            customerCode$=#firmID$+customer_id$
            country$=addrTo!.getCountry()
            region$=addrTo!.getRegion()

            rem --- Check if we've already gotten this exemption
            if #exemptionMap!.containsKey(customerCode$+":"+country$+":"+region$) then
                rem --- Use exemption we already have
                exemption!=#exemptionMap!.get(customerCode$+":"+country$+":"+region$)
            else
                rem --- Get exemption for this customer and location
                #busyImageStart()
                if #logClient then
                    logSource$="listValidCertificatesForCustomer"
                    print(#devClientLog) "<<< REQUEST "+logSource$+" (firm ID:  "+#firmID$+") "+date(0:"%Yd%Mz%Dz%Hz%mz%sz")+" >>>"
                    print(#devClientLog) "    companyId: "+#userCompanyID$
                    print(#devClientLog) "    customerCode: "+#firmID$+customer_id$
                    print(#devClientLog) "    country: "+country$
                    print(#devClientLog) "    region: "+region$
                    startTime!=new Date()
                endif
                customerNotFound=0
                exemptStatusModel!=#avaTaxClient!.listValidCertificatesForCustomer(companyId!,customerCode$,country$,region$,err=*next)
                if exemptStatusModel!=null() then
                    err_num=err
                    if err_num=252 then
                        E!=BBjAPI().getLastBBjException()
                        rd_err_text$=rd_err_text$+$0A$+E!.getClass().getName()
                        if E!.getMessage()<>null() and pos("EntityNotFoundError"=E!.getMessage()) then customerNotFound=1
                    endif
                    if !customerNotFound then 
                        customerNotFound=0
                        exemptStatusModel!=#avaTaxClient!.listValidCertificatesForCustomer(companyId!,customerCode$,country$,region$,err=*endif)
                        customerNotFound=1
                    endif
                endif
                if #logClient then
                    endTime!=new Date()
                    response_time=(endTime!.getTime()-startTime!.getTime())/1000
                    print(#devClientLog) "<<< RESPONSE "+logSource$+" (seconds: "+str(response_time)+") >>>"
                    if customerNotFound then
                        print(#devClientLog) "    status: Customer Not Found"
                    else
                        print(#devClientLog) "    status: "+ exemptStatusModel!.getStatus()
                    endif
                    logSource$=""
                endif
                #busyImageStop()
                if exemptStatusModel!<>null() then certModel!=exemptStatusModel!.getCertificate()
            
                rem --- Update ARM_CUSTEXMPT information as needed
                if certModel!<>null() and certModel!.getValid() then
                    certId$=certModel!.getId().toString()
                    yyyyMMdd!=new SimpleDateFormat("yyyyMMdd")
                    expirationDate$=yyyyMMdd!.format(certModel!.getExpirationDate())
                    dim armCustExmpt$:#tplArmCustExmpt$
                    extractrecord(#devArmCustExmpt,key=#firmID$+customer_id$+shipto_type$+shipto_no$,dom=*next)armCustExmpt$
                    if cvs(armCustExmpt.customer_id$,2)="" then
                        rem --- Add missing ARM_CUSTEXMPT record
                        armCustExmpt.firm_id$=#firmID$
                        armCustExmpt.customer_id$=customer_id$
                        armCustExmpt.shipto_type$=shipto_type$
                        armCustExmpt.shipto_no$=shipt_no$
                        armCustExmpt.entity_use_cd$=""
                        armCustExmpt.exempt_no$=certId$
                        armCustExmpt.expire_date$=expirationDate$
                        writerecord(#devArmCustExmpt)armCustExmpt$
                    else
                        if armCustExmpt.expire_date$<expirationDate$ then
                            rem --- Update ARM_CUSTEXMPT record with latest expiration date and certificate ID
                            armCustExmpt.entity_use_cd$=""
                            armCustExmpt.exempt_no$=certId$
                            armCustExmpt.expire_date$=expirationDate$
                            writerecord(#devArmCustExmpt)armCustExmpt$
                        else
                            rem --- Release extract
                            read(#devArmCustExmpt)
                        endif
                    endif
                else
                   rem --- AvaTax exemption certificate not found. Use ARM_CUSTEXMPT exemption information.
                    dim armCustExmpt$:#tplArmCustExmpt$
                    readrecord(#devArmCustExmpt,key=#firmID$+customer_id$+shipto_type$+shipto_no$,dom=*next)armCustExmpt$
                endif
            
                rem --- Stash this customer exemption
                exemption!=new Properties()
                exemption!.setProperty("entity_use_cd",armCustExmpt.entity_use_cd$)
                exemption!.setProperty("exempt_no",armCustExmpt.exempt_no$)
                exemption!.setProperty("expire_date",armCustExmpt.expire_date$)
                #exemptionMap!.put(customerCode$+":"+country$+":"+region$,exemption!)                
            endif

            methodret exemption!
            
