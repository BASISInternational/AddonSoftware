        rem /**
        rem  * Have the sales tax service commit their previous sales tax transaction for the given invoice.
        rem  * 
        rem  * @param BBjString customer_id$
        rem  * @param BBjString order_no$
        rem  * @param BBjString ar_inv_no$
        rem  * @param BBjString transType$
        rem  *
        rem  * @return TransactionModel
        rem  */
        method public TransactionModel commitTransaction(BBjString customer_id$, BBjString order_no$, BBjString ar_inv_no$, BBjString transType$)
            seterr commitTransaction_error
            
            rem --- Has this transaction already been committed?
            rem --- Use case: AvaTax processed the commit successfully, but internet connection was lost for their response.
            companyCode$ = #companyCode$
            transactionCode$ = #firmID$+customer_id$+order_no$+ar_inv_no$
            if cvs(transType$,2)<>"" then
                documentType! = DocumentType.valueOf(transType$)
            else
                documentType! = DocumentType.valueOf("Any")
            endif
            #busyImageStart()
            if #logClient then
                logSource$="getTransactionByCode"
                print(#devClientLog) "<<< REQUEST "+logSource$+" (firm ID:  "+#firmID$+") "+date(0:"%Yd%Mz%Dz%Hz%mz%sz")+" >>>"
                print(#devClientLog) "    companyCode: "+#companyCode$
                print(#devClientLog) "    transactionCode: "+transactionCode$
                print(#devClientLog) "    documentType: "+documentType!.toString()
                startTime!=new Date()
            endif
            transaction!=#avaTaxClient!.getTransactionByCode(companyCode$, transactionCode$, documentType!, "")
            if #logClient then
                endTime!=new Date()
                response_time=(endTime!.getTime()-startTime!.getTime())/1000
                print(#devClientLog) "<<< RESPONSE "+logSource$+" (seconds: "+str(response_time)+") >>>"
                print(#devClientLog) "    status: "+transaction!.getStatus().toString()
                print(#devClientLog) "    transactionId: "+transaction!.getId().toString()
                logSource$=""
            endif
            #busyImageStop()

            rem --- Need to commit this transaction? (status 'saved' = uncommitted)
            if transaction!.getStatus().toString()="Saved" then
                commitTrans!=new CommitTransactionModel()
                commitTrans!.setCommit(1); rem --- true
                documentType! = transaction!.getType()
                #busyImageStart()
                if #logClient then
                    logSource$="commitTransaction"
                    print(#devClientLog) "<<< REQUEST "+logSource$+" (firm ID:  "+#firmID$+") "+date(0:"%Yd%Mz%Dz%Hz%mz%sz")+" >>>"
                    print(#devClientLog) "    companyCode: "+companyCode$
                    print(#devClientLog) "    transactionCode: "+transactionCode$
                    print(#devClientLog) "    documentType: "+documentType!.toString()
                    print(#devClientLog) "    include: Details,Addresses"
                    print(#devClientLog) "    commit: true"
                    startTime!=new Date()
                endif
                transaction!=#avaTaxClient!.commitTransaction(companyCode$, transactionCode$, documentType!, "Details,Addresses", commitTrans!)
                if #logClient then
                    endTime!=new Date()
                    response_time=(endTime!.getTime()-startTime!.getTime())/1000
                    print(#devClientLog) "<<< RESPONSE "+logSource$+" (seconds: "+str(response_time)+") >>>"
                    print(#devClientLog) "    JSON: "+ #stringJSON(transaction!)
                    logSource$=""
                endif
                #busyImageStop()
            endif

            rem --- Save committed sales tax transaction response
            optSlsTaxTransKey$=#updateSalesTaxTransHistory(customer_id$, order_no$, ar_inv_no$, transaction!)
            
            methodret transaction!
            
