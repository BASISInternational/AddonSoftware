            optSlsTaxTrans.sequence_no$=str(nextSeqNo:seqNoMask$)
            optSlsTaxTransKey$=tripKey$+optSlsTaxTrans.sequence_no$

            rem --- Build OPT_SLSTAXTRANS record
            dim optSlsTaxTransr$:#tplOptSlsTaxTrans$
            optSlsTaxTrans.firm_id$=#firmID$
            optSlsTaxTrans.customer_id$=customer_id$
            optSlsTaxTrans.order_no$=order_no$
            optSlsTaxTrans.ar_inv_no$=ar_inv_no$
            optSlsTaxTrans.sequence_no$=str(nextSeqNo:seqNoMask$)
            optSlsTaxTrans.trans_tstamp$=date(0:"%Yd%Mz%Dz%Hz%mz%sz")
            optSlsTaxTrans.server$=#server$
            if #testMode$ = "true" then
                optSlsTaxTrans.test_mode=1
            else
                optSlsTaxTrans.test_mode=0
            endif
            if transaction!=null()
                optSlsTaxTrans.slstax_status$="Failed"
            else
                optSlsTaxTrans.slstax_trans_rec$=transaction!.getCode()
                optSlsTaxTrans.slstax_date$=cvs(transaction!.getDate().toString(),2)
                optSlsTaxTrans.slstax_status$=cvs(transaction!.getStatus().toString(),2)
                optSlsTaxTrans.entity_use_cd$=transaction!.getEntityUseCode()
                optSlsTaxTrans.exempt_no$=cvs(transaction!.getExemptNo(),2)
                optSlsTaxTrans.tot_amount=transaction!.getTotalAmount()
                optSlsTaxTrans.tot_discount=transaction!.getTotalDiscount()
                optSlsTaxTrans.tot_exempt=transaction!.getTotalExempt()
                optSlsTaxTrans.tot_taxable=transaction!.getTotalTaxable()
                optSlsTaxTrans.tot_tax=transaction!.getTotalTax()
                addrModelList!=transaction!.getAddresses()
                if addrModelList!<>null() and addrModelList!.size()>0 then
                    addrModel!=addrModelList!.get(0); rem --- ship-to address at index 0
                    optSlsTaxTrans.addr_line_1$=addrModel!.getLine1()
                    optSlsTaxTrans.addr_line_2$=addrModel!.getLine2()
                    optSlsTaxTrans.addr_line_3$=addrModel!.getLine3()
                    optSlsTaxTrans.city$= addrModel!.getCity()
                    optSlsTaxTrans.state_code$=addrModel!.getRegion()
                    optSlsTaxTrans.zip_code$=addrModel!.getPostalCode()
                    optSlsTaxTrans.cntry_id$=addrModel!.getCountry()
                endif
            
                rem --- Add transaction's JSON response to OPT_SLSTAXTRANS record
                response$=#stringJSON(transaction!)
                optSlsTaxTrans.json_text$=response$
            endif
            rem --- Write OPT_SLSTAXTRANS record
            writerecord(#devOptSlsTaxTrans)optSlsTaxTrans$
 
            methodret optSlsTaxTransKey$
            
