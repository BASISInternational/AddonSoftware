        rem /**
        rem  * Void specified previous uncommitted sales tax service SalesInvoice transaction.
        rem  * 
        rem  * @param BBjString customer_id$
        rem  * @param BBjString order_no$
        rem  * @param BBjString ar_inv_no$
        rem  * @param BBjString transType$
        rem  *
        rem  * @return boolean success=1, failure=0
        rem  */
        method public boolean voidTransaction(BBjString customer_id$, BBjString order_no$, BBjString ar_inv_no$, BBjString transType$)
            seterr voidTransaction_error
            success=Boolean.valueOf("false")
            
            rem --- Has this transaction already been committed?
            rem --- Use case: AvaTax processed the commit successfully, but internet connection was lost for their response.
            companyCode$ = #companyCode$
            transactionCode$ = #firmID$+customer_id$+order_no$+ar_inv_no$
            documentType! = DocumentType.valueOf(transType$)
            #busyImageStart()
            if #logClient then
                logSource$="getTransactionByCode"
                print(#devClientLog) "<<< REQUEST "+logSource$+" (firm ID:  "+#firmID$+") "+date(0:"%Yd%Mz%Dz%Hz%mz%sz")+" >>>"
                print(#devClientLog) "    companyCode: "+#companyCode$
                print(#devClientLog) "    transactionCode: "+transactionCode$
                print(#devClientLog) "    documentType: "+documentType!.toString()
                startTime!=new Date()
            endif
            transactionNotFound=0
            transaction!=#avaTaxClient!.getTransactionByCode(companyCode$, transactionCode$, documentType!, "", err=*next)
            if transaction!=null() then
                err_num=err
                if err_num=252 then
                    E!=BBjAPI().getLastBBjException()
                    rd_err_text$=rd_err_text$+$0A$+E!.getClass().getName()
                    if E!.getMessage()<>null() and pos("EntityNotFoundError"=E!.getMessage()) then transactionNotFound=1
                endif
            endif
            if #logClient then
                endTime!=new Date()
                response_time=(endTime!.getTime()-startTime!.getTime())/1000
                print(#devClientLog) "<<< RESPONSE "+logSource$+" (seconds: "+str(response_time)+") >>>"
                if transactionNotFound then
                    print(#devClientLog) "    status: Transaction Not Found"
                    print(#devClientLog) "    transactionId: (none)"
                else
                    print(#devClientLog,err=*next) "    status: "+transaction!.getStatus().toString()
                    print(#devClientLog,err=*next) "    transactionId: "+transaction!.getId().toString()
                endif
                logSource$=""
            endif
            #busyImageStop()

            if transaction!=null() or transaction!.getStatus().toString()="Cancelled" then
                rem --- Transaction doesn't exist or is already Voided ('Cancelled'), so no need to void it
                success=Boolean.valueOf("true")
            else
                rem --- Cannot void committed transactions
                if transaction!.getStatus().toString()<>"Committed" then
                    voidModel!=new VoidTransactionModel()
                    voidModel!.setCode(VoidReasonCode.DocVoided)
                    #busyImageStart()
                    if #logClient then
                        logSource$="voidTransaction"
                        print(#devClientLog) "<<< REQUEST "+logSource$+" (firm ID:  "+#firmID$+") "+date(0:"%Yd%Mz%Dz%Hz%mz%sz")+" >>>"
                        print(#devClientLog) "    companyCode: "+#companyCode$
                        print(#devClientLog) "    transactionCode: "+transactionCode$
                        print(#devClientLog) "    documentType: "+documentType!.toString()
                        print(#devClientLog) "    voidReason: "+voidModel!.getCode().toString()
                        startTime!=new Date()
                    endif
                    transaction!=#avaTaxClient!.voidTransaction(companyCode$, transactionCode$, documentType!, "", voidModel!)
                    if #logClient then
                        endTime!=new Date()
                        response_time=(endTime!.getTime()-startTime!.getTime())/1000
                        print(#devClientLog) "<<< RESPONSE "+logSource$+" (seconds: "+str(response_time)+") >>>"
                        print(#devClientLog) "    status: "+transaction!.getStatus().toString()
                        print(#devClientLog) "    transactionId: "+transaction!.getId().toString()
                        logSource$=""
                    endif
                    #busyImageStop()
                    if transaction!.getStatus().toString()="Cancelled" then success=Boolean.valueOf("true")
                endif
            endif
            
            methodret success
            
